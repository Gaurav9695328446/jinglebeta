<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/playlistlayout"
    android:elevation="8dp"
    android:layout_margin="5dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/songurlimage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/songid"
        android:layout_toRightOf="@+id/songurlimage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/published_at"
        android:textSize="20dp"
        android:text="Hello"
        android:paddingLeft="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/songid"
        android:layout_toRightOf="@+id/songurlimage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videoid"
        android:layout_below="@+id/published_at"
        android:layout_toRightOf="@+id/songurlimage" />

</RelativeLayout>